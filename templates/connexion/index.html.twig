{% extends "base.html.twig" %}

{% block body %}
	<section class="container-connect flex item-center">
		<form action="/admin-connect-verif" method="post">
			<div class='flex flex-wrap direction-column large-12 medium-12 small-12 margin-auto gap-20 item-center'>
				<div class="form-group large-8 medium-12 small-12 flex">
					<input type="text" name="identifiant" id="identifiant" placeholder='Identifiant de connexion' class='large-10 margin-auto'>
				</div>
				<div class="form-group large-8 medium-12 small-12 flex">
					<input type="password" name="password" id="password" placeholder='Mot de passe' class='large-10 margin-auto'>
				</div>
				<div class="large-8 medium-12 small-12 flex">
					<button type="submit" class='button margin-auto'>Connexion</button>
				</div>
			</div>
		</form>
	</section>
{% endblock %}
